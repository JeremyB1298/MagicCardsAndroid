<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_patterned_bg">

    <ImageView
        android:id="@+id/ivPowerInd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:tint="@color/ColorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/tvPowerInd"
        app:layout_constraintEnd_toEndOf="@+id/tvPowerInd"
        app:layout_constraintStart_toStartOf="@+id/tvPowerInd"
        app:layout_constraintTop_toTopOf="@+id/tvPowerInd"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_sword"
        tools:ignore="NotSibling,VectorDrawableCompat" />

    <TextView
        android:id="@+id/tvPowerInd"
        style="@style/RcyclViewPowerIndicator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/circle_card_star"
        android:gravity="center"
        android:text="50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>